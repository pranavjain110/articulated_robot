<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro" />
    
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.055 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1025 0 0.0425"/>
            <geometry>
                <box size="0.205 0.125 0.085"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0.1025 0 0.0425"/>
            <geometry>
                <box size="0.205 0.125 0.085"/>
            </geometry>
        </collision>

        <xacro:inertial_box mass = "0.5" x = "0.205" y = "0.125" z = "0.085">
            <origin xyz="0.1025 0 0.0425" rpy = "0 0 0"/>
        </xacro:inertial_box> 
    </link>
    
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.080 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.033" length="0.027"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.033" length="0.027"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.035" length = "0.027" radius = "0.033">
            <origin xyz="0 0 0" rpy = "0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.080 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.033" length="0.027"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.033" length="0.027"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass = "0.035" length = "0.027" radius = "0.033">
            <origin xyz="0 0 0" rpy = "0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTOR WHEEL LINK -->
    <joint name="castor_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="castor_wheel"/>
        <origin xyz="0.165 0 0"/>
    </joint>

    <link name="castor_wheel">
        <visual>
            <geometry>
                <sphere radius="0.033" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.033" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass = "0.030" radius = "0.033">
            <origin xyz="0 0 0" rpy = "0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    
</robot>